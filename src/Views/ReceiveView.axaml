<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileTransfer.Views.ReceiveView">
    
    <UserControl.Styles>
        <StyleInclude Source="/src/Styles/SendReceiveStyle.axaml"/>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto,*" HorizontalAlignment="Stretch" Margin="40,40">
        <TextBlock Grid.Row="0" Classes="send-receive-element title-text" Text="Receive"/>
        <ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl Items="{Binding Messages}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          IsVisible="False"> <!-- TODO: Only enable if there are any messages -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto" HorizontalAlignment="Stretch" Margin="0,20">
                            <Ellipse Grid.Column="0" Width="40" Height="40" Fill="{StaticResource MattBlue}"
                                     Margin="0,0,40,0" VerticalAlignment="Center" 
                                     IsVisible="True"/> <!-- TODO: Only enable if unread (not read or marked as unread) -->
                            <Button Grid.Column="1" Classes="selectable-button-effect highlight-no-change"
                                    Background="{StaticResource AppPurple}" CornerRadius="50"
                                    HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="120">
                                <!-- TODO: Add ContextMenu with: Open message, Delete message, Mark as unread, Mark as read -->
                                <Grid ColumnDefinitions="*,Auto" Margin="40,0">
                                    <Grid Grid.Column="0" RowDefinitions="*,*" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                          Margin="0,0,30,0">
                                        <TextBlock Grid.Row="0" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"
                                                   Foreground="{StaticResource White}"/> <!-- TODO: Nickname of sender -->
                                        <TextBlock Grid.Row="1" FontSize="14" Foreground="{StaticResource White}"
                                                   VerticalAlignment="Center" TextWrapping="Wrap" MaxLines="2" TextTrimming="CharacterEllipsis"
                                                   TextAlignment="Left"/> <!-- TODO: ^ (Optional) message -->
                                    </Grid>
                                    <Grid Grid.Column="1" RowDefinitions="*,*" VerticalAlignment="Stretch">
                                        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto" 
                                              HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Grid.Column="0" Source="/Assets/avalonia-logo.ico" Width="30" Height="30"
                                                   Margin="0,0,7.5,0"/> <!-- TODO: Icon: File-Light.png -->
                                            <TextBlock Grid.Column="1" FontSize="28" FontWeight="Bold"
                                                       Foreground="{StaticResource White}"/> <!-- TODO: Number of files -->
                                        </Grid>
                                        <TextBlock Grid.Row="1" FontSize="26" FontWeight="Bold"
                                                   Foreground="{StaticResource White}"/> <!-- TODO: Overall size of files (only files, not text message too) -->
                                    </Grid>
                                </Grid>
                            </Button>
                            <Button Grid.Column="2" Classes="selectable-button-effect" Margin="35,0,0,0" 
                                    VerticalAlignment="Center">
                                <!-- TODO: Open confirmation dialog (confirmation: download ZIP-archive)  -->
                                <Button.Template>
                                    <ControlTemplate>
                                        <Image Source="/Assets/avalonia-logo.ico" Width="70" Height="70"/>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"
                   FontSize="38" FontWeight="Bold" Foreground="{StaticResource MainGrey}"
                   Text="No messages received yet." IsVisible="True"/> <!-- TODO: Only visible if no received messages -->
    </Grid>
    
</UserControl>
